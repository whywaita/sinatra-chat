!!!
%html{:lang => "ja"}
  %head
    %title= @title
    %link{:rel => :stylesheet, :type => :"text/css", :href => "https://bootswatch.com/4/cosmo/bootstrap.min.css"}
  %body
    %h1
      %a{ :href => '/' }
        #{@title}
  %h2
    Login User: #{request.env["warden"].user[:name]}
    %a{ :href => '/logout' }
      Logout

  %form.form-inline{:method => "POST", :action => '/bbs'}
    %input{:type => "hidden", :name => "_method", :value => "POST"}
    %input.form-control{:type => "text", :name => "message", :placeholder => "message"}
    %button.btn.btn-default{:type => "submit"}
      Submit

  %table.table
    %thead.thead-inverse
      %tr
        %th Name
        %th Message
        %th Time
    %tbody
      - @bbs_data.reverse_each do |row|
        %tr
          %td= row[0]
          %td= row[1]
          %td= row[2]
